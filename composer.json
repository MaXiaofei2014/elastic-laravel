{
    "name": "mabadir/elastic-laravel",
    "type": "library",
    "description": "Elastic Search Indexer for Laravel 5",
    "keywords": [
        "mabadir",
        "elastic-laravel"
    ],
    "homepage": "https://github.com/mabadir/elastic-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Mina Abadir",
            "email": "mina@abadir.email",
            "homepage": "https://mina.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "elasticsearch/elasticsearch": "^5.1",
        "illuminate/support": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "mabadir\\ElasticLaravel\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
